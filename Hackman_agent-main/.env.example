# ==============================================================================
# API KEYS
# ==============================================================================
# At least one API key is required. The system will auto-select the provider
# based on available keys: OPENAI_API_KEY takes priority over GOOGLE_API_KEY

# OpenAI API Key (for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Google API Key (for Gemini models)
GOOGLE_API_KEY=your_google_api_key_here


# ==============================================================================
# MODEL CONFIGURATION
# ==============================================================================

# --- Main ArcueAgent Models ---
# Primary model for story generation (characters, plot, dialogue, scenes, etc.)
# If not set, auto-selects based on available API keys:
#   - Default: gpt-5 (if OPENAI_API_KEY is set)
#   - Fallback: gemini-2.5-pro (if GOOGLE_API_KEY is set)
# Supported OpenAI models: gpt-5, gpt-5-mini, gpt-5-nano
# Supported Google models: gemini-2.5-flash, gemini-2.5-pro
# Leave empty to use auto-selection based on API keys
MODEL=

# Comma-separated list of available OpenAI models
# Override this to add custom OpenAI models or restrict available options
# Default: gpt-5,gpt-5-mini,gpt-5-nano
OPENAI_MODELS=gpt-5,gpt-5-mini,gpt-5-nano

# Comma-separated list of available Google models
# Override this to add custom Google/Gemini models or restrict available options
# Default: gemini-2.5-flash,gemini-2.5-pro
GOOGLE_MODELS=gemini-2.5-flash,gemini-2.5-pro

# Default model fallback for OpenAI (used when OPENAI_API_KEY is available)
# Default: gpt-5
DEFAULT_OPENAI_MODEL=gpt-5

# Default model fallback for Google (used when GOOGLE_API_KEY is available)
# Default: gemini-2.5-pro
DEFAULT_GOOGLE_MODEL=gemini-2.5-pro


# --- Research Agent Models ---
# Model for research agent main operations
# If not set, uses same auto-selection logic as MODEL
# Leave empty to use auto-selection
RESEARCH_MODEL=

# Model for research quality evaluation
# If not set, uses the same model as RESEARCH_MODEL
# Leave empty to use same as RESEARCH_MODEL
RESEARCH_EVALUATOR_MODEL=


# --- Supervisor Agent Model ---
# Model for supervisor orchestration (decides research needs, generates initial drafts)
# If not set, uses same auto-selection logic as MODEL
# Leave empty to use auto-selection
SUPERVISOR_MODEL=


# ==============================================================================
# MODEL PARAMETERS
# ==============================================================================

# Model temperature (0.0 - 2.0)
# Lower values (0.0-0.3): More focused and deterministic
# Medium values (0.4-0.7): Balanced creativity
# Higher values (0.8-2.0): More creative and random
# Leave empty to use default (0.5)
MODEL_TEMPERATURE=

# Random seed for reproducible outputs (optional)
# Set to any integer for consistent results across runs
# Leave empty for non-deterministic behavior
RANDOM_SEED=

# Creative temperature for creative writing tasks (0.0 - 2.0)
# Used for highly creative tasks like dialogue and scene generation
# Default: 0.8
CREATIVE_TEMPERATURE=0.8

# Analytical temperature for structured tasks (0.0 - 1.0)
# Used for analytical tasks like plot structure and character analysis
# Default: 0.3
ANALYTICAL_TEMPERATURE=0.3

# Maximum retry attempts for failed LLM calls
# Default: 3
MAX_RETRIES=3


# ==============================================================================
# FILM/SCRIPT CONFIGURATION
# ==============================================================================

# Target film/video length in seconds
# Default: 90
FILM_LENGTH_SECONDS=90

# Number of scenes to generate
# Default: 12
NUMBER_OF_SCENES=12


# ==============================================================================
# WORKFLOW CONFIGURATION
# ==============================================================================

# Thread ID for workflow persistence (optional)
# Leave empty to generate a new UUID for each run
THREAD_ID=

# Auto-continue through workflow stages without human interrupts
# Set to true/yes/1 to skip human-in-the-loop confirmations
# Default: true
AUTO_CONTINUE=true

# Checkpoint ID to resume from a specific point (optional)
# Use with TIME_TRAVEL_LIST to see available checkpoints
CHECKPOINT_ID=

# List available checkpoint history for time-travel
# Set to true/yes/1 to display checkpoint history and exit
# Default: true
TIME_TRAVEL_LIST=false

# Log line / story premise (optional)
# Can be set here or passed as command-line argument
# Example: A detective solves crimes using AI technology
LOG_LINE=


# ==============================================================================
# AD MODE CONFIGURATION
# ==============================================================================
# Settings for commercial/advertisement script generation

# Enable ad mode (true/false)
# Default: true
AD_MODE=false

# Brand name for the advertisement
# Example: Nike, Apple, Tesla
AD_BRAND=

# Product or service being advertised
# Example: Running shoes, iPhone 15, Electric SUV
AD_PRODUCT=

# Primary goal of the advertisement
# Example: increase brand awareness, drive sales, launch new product
AD_GOAL=

# Target audience description
# Example: millennials aged 25-35, tech enthusiasts, fitness enthusiasts
AD_AUDIENCE=

# Desired tone
# Example: humorous, inspirational, professional, emotional, edgy
AD_TONE=

# Special offer or call-to-action
# Example: 50% off this weekend, visit our website, available now
AD_OFFER=

# Creative constraints or requirements
# Example: must show product in use, family-friendly, outdoor setting
AD_CONSTRAINTS=

# Total ad duration in seconds
# Default: 90
AD_TOTAL_SECONDS=90

# Average duration per scene in seconds
# Default: 8
AD_SCENE_SECONDS=8


# ==============================================================================
# EXPORT CONFIGURATION
# ==============================================================================

# Directory for exported files (relative to project root)
# Default: ArcueAgent/exports
EXPORT_DIR=ArcueAgent/exports

# Checkpoint database path
# Default: checkpoints.db
CHECKPOINT_DB_PATH=checkpoints.db


# ==============================================================================
# API SERVER CONFIGURATION
# ==============================================================================

# API server host
# Default: 0.0.0.0 (all interfaces)
API_HOST=0.0.0.0

# API server port
# Default: 8000
API_PORT=8000


# ==============================================================================
# DEVELOPMENT & DEBUGGING
# ==============================================================================

# Enable debug logging (true/false)
# Default: true
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# Default: INFO
LOG_LEVEL=INFO
